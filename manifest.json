{
  "manifest_version": 3,
  "name": "GeoFill - 智能注册助手",
  "version": "1.5.0",
  "description": "根据地理位置智能生成注册信息并一键填写表单",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "http://ip-api.com/*",
    "https://ipapi.co/*",
    "<all_urls>"
  ],
  "commands": {
    "fill-form": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "填写表单"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/selectors/common.js",
        "scripts/selectors/japan.js",
        "scripts/content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}